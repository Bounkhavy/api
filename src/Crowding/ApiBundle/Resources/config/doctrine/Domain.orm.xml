<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Crowding\ApiBundle\Entity\Domain" table="domain">
    <indexes>
      <index name="IDX_A7A91E0BA76ED395" columns="user_id"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="UNIQ_A7A91E0B989D9B62" columns="slug"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="text" column="description" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="slug" type="string" column="slug" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <many-to-one field="user" target-entity="User" fetch="LAZY">
      <join-columns>
        <join-column name="user_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="lang" target-entity="Lang" inversed-by="domain" fetch="LAZY">
      <join-table name="domain_lang">
        <join-columns>
          <join-column name="domain_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="lang_id" referenced-column-name="code"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
