<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Crowding\ApiBundle\Entity\Translation" table="translation">
    <indexes>
      <index name="IDX_B469456F115F0EE5" columns="domain_id"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="domain_id" columns="domain_id,code"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="code" type="string" column="code" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="domain" target-entity="Domain" fetch="LAZY">
      <join-columns>
        <join-column name="domain_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="lang" target-entity="Lang" inversed-by="translation" fetch="LAZY">
      <join-table name="translation_to_lang">
        <join-columns>
          <join-column name="translation_id" referenced-column-name="id"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="lang_id" referenced-column-name="code"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>
